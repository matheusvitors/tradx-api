// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id       String  @id @unique
    nome     String
    username String  @unique
    password String
    email    String  @unique
    Conta    Conta[]
}

model Conta {
    id           String     @id @unique
    nome         String
    tipo         String
    usuario      Usuario    @relation(fields: [usuarioId], references: [id])
    usuarioId    String
    saldo        Float      @default(0.00)
    saldoInicial Float      @default(0.00)
    Operacao     Operacao[]
}

model Ativo {
    id             String     @id @unique
    nome           String
    acronimo       String     @unique
    tipo           String
    dataVencimento DateTime?
    Operacao       Operacao[]
}

model Operacao {
    id              String    @id @unique
    ativo           Ativo     @relation(fields: [ativoId], references: [id])
    ativoId         String
    conta           Conta     @relation(fields: [contaId], references: [id])
    contaId         String
    quantidade      Int
    tipo            String
    precoEntrada    Int
    stopLoss        Int
    alvo            Int
    precoSaida      Int?
    dataEntrada     DateTime
    dataSaida       DateTime?
    margem          Decimal?
    operacaoPerdida Boolean
    operacaoErrada  Boolean
    motivo          String?
    comentarios     String?
}
