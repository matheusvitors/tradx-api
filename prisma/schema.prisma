// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Ativo {
    id       String     @id @unique
    nome     String
    acronimo String     @unique
    tipo     String
    Operacao Operacao[]
}

model Operacao {
    id              String   @id @unique
    ativo           Ativo    @relation(fields: [ativoId], references: [id])
    ativoId         String
    quantidade      Int
    tipo            String
    precoEntrada    Int
    stopLoss        Int
    alvo            Int
    precoSaida      Int
    dataEntrada     DateTime
    dataSaida       DateTime
    margem          Int
    operacaoPerdida Boolean
    operacaoErrada  Boolean
    motivo          String?
    comentarios     String?
}
